WebElement stageDropdown = driver.findElement(By.id("StageId"));
            Select stageSelect = new Select(stageDropdown);
            stageSelect.selectByVisibleText("Development");

            // Enter Title
            WebElement titleInput = driver.findElement(By.id("TitleId"));
            titleInput.sendKeys("Automation Test");

            // Select "Can" from Template
            WebElement templateDropdown = driver.findElement(By.id("TemplateId"));
            Select templateSelect = new Select(templateDropdown);
            templateSelect.selectByVisibleText("Can");
