
# ------------------- Main -------------------
def main():
    doc, doc_name = create_doc("Step-1")
    doc = login(AUTOMATIONUSER,PASSWORD,doc)
    doc = change_profile(COLLABORATIVE_SPACE, PRODUCT_DATA_ORIGINATOR,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-2")
    #object_window, doc= search_and_open(doc)
    object_window, doc = create(doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-3")
    doc = edit_attributes(object_window,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-4")
    doc = fill_template_table(object_window,TEMPLATE,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-5")
    doc = promote_object(object_window,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-6")
    doc = connect_route(object_window,doc)
    route_window, doc = open_route(object_window,doc)
    doc = start_route(route_window,doc)
    doc = logout(doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-7")
    doc = login(AUTOMATIONAPPROVER,PASSWORD,doc)
    doc = change_profile(COLLABORATIVE_SPACE, BASIC_USER, doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-8")
    object_window, doc = search_and_open(doc)
    route_window, doc = open_route(object_window,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-9")
    doc = approve_task(route_window,doc)
    save_doc(doc,doc_name)
    doc, doc_name = create_doc("Step-10")
    doc = logout(doc)
    doc = login(AUTOMATIONUSER,PASSWORD,doc)
    object_window, doc= search_and_open(doc)
    save_doc(doc,doc_name)
    time.sleep(20)
    print("âœ… Automation completed")


if __name__ == "__main__":
    main()
