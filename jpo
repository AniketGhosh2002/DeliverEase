def click_when_ready(by, value, description="", offset=None, wait=30):
    elem = WebDriverWait(driver, wait).until(EC.element_to_be_clickable((by, value)))
    if offset:
        actions.move_to_element_with_offset(elem, *offset).click().perform()
    else:
        actions.move_to_element(elem).click().perform()
    print(f"âœ… Clicked {description}")
    time.sleep(5)
    return elem




