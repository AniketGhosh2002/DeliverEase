auto_input = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.CSS_SELECTOR, "input.autocomplete-input"))
)
auto_input.clear()
auto_input.send_keys("Business Unit")

# Step 2: Wait for suggestion list to appear
suggestion = WebDriverWait(driver, 10).until(
    EC.element_to_be_clickable((By.XPATH, "//li[contains(@class,'autocomplete-item')]//span[text()='Business Unit']"))
)

# Step 3: Click the suggestion
suggestion.click()

print("'Business Unit' selected successfully.")
