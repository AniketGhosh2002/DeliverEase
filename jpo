from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait, Select
from selenium.webdriver.support import expected_conditions as EC

# --- Select Stage = Development ---
stage_dropdown = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.ID, "StageId"))
)
Select(stage_dropdown).select_by_visible_text("Development")
print("✅ Selected Stage: Development")

# --- Enter Title = Automation Test ---
title_input = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.ID, "TitleId"))
)
title_input.clear()
title_input.send_keys("Automation Test")
print("✅ Entered Title: Automation Test")

# --- Select Template = Can ---
template_dropdown = WebDriverWait(driver, 10).until(
    EC.presence_of_element_located((By.ID, "TemplateId"))
)
Select(template_dropdown).select_by_visible_text("Can")
print("✅ Selected Template: Can")
