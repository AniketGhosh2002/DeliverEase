def type_text(by, value, text, description=""):
    elem = WebDriverWait(driver, 15).until(
        EC.element_to_be_clickable((by, value))
    )
    elem.clear()
    elem.send_keys(text)
    if description != "Password" :
        print(f"Entered {description}: {text}")
    return elem

def select_dropdown(by, value, option_text, description="", wait=10, sleep_time=5):
    dropdown = WebDriverWait(driver, wait).until(
        EC.presence_of_element_located((by, value))
    )
    select = Select(dropdown)
    select.select_by_visible_text(option_text)
    print(f"Selected '{option_text}' from the {description} dropdown")
    time.sleep(sleep_time)
